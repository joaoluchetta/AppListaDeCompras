<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:context=".HomeActivity">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textBuscar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:hint="@string/buscar"
            app:hintAnimationEnabled="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnLogout"
            app:startIconDrawable="@drawable/ic_lupa_16px">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputBuscar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/default_button"
            android:text="@string/logout"
            android:textColor="@color/whiteSmoke"
            app:backgroundTint="@null"
            app:layout_constraintTop_toTopOf="@id/textBuscar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textBuscar"
            app:layout_constraintBottom_toBottomOf="@id/textBuscar"
            />

        <TextView
            android:id="@+id/textTituloHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/minhas_listas"
            android:textColor="@color/chryslerBlue"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textBuscar" />

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:columnCount="3"
            android:orientation="horizontal"
            android:padding="16dp"
            android:rowCount="10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >

            <LinearLayout
            android:id="@+id/btnCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/logoCounter"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:contentDescription="teste"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_logout_24px"
                />

            <TextView
                android:id="@+id/titleCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="teste"
                android:textColor="@color/chryslerBlue"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>